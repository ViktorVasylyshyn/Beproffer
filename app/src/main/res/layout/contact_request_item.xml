<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.beproffer.beproffer.data.models.ContactRequestItem" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin_small"
        android:background="@drawable/rectangle_white_background"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/contact_request_item_deny_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_gradient_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/base_margin_medium"
                android:layout_height="@dimen/profile_image_three_quarters"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/contact_request_item_image"
            android:layout_width="@dimen/profile_image_half"
            android:layout_height="@dimen/profile_image_half"
            android:layout_marginStart="@dimen/base_margin_medium"
            android:layout_marginBottom="@dimen/base_margin_small"
            android:layout_marginTop="@dimen/base_margin_small"
            android:layout_marginEnd="@dimen/base_margin_small"
            android:src="@{item.requestImageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/contact_request_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{item.requestName}"
            android:textColor="@color/color_base_text"
            android:textSize="@dimen/base_text_size_big"
            app:layout_constraintStart_toEndOf="@+id/contact_request_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contact_request_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin_small"
            android:textColor="@color/color_base_text_70per"
            android:textSize="@dimen/base_text_size_small"
            android:textStyle="italic|bold"
            app:layout_constraintStart_toEndOf="@+id/contact_request_item_image"
            app:layout_constraintTop_toBottomOf="@+id/contact_request_item_name"
            app:showUserType="@{item.requestType}" />


        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_gradient_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/base_margin_medium"
                android:layout_height="@dimen/profile_image_three_quarters"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</layout>