<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.beproffer.beproffer.data.models.ContactRequestItem" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_small"
        android:background="@drawable/button_background_green_stroke_rectangle"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/contact_request_item_image"
            android:layout_width="@dimen/profile_image_half"
            android:layout_height="@dimen/profile_image_half"
            android:layout_marginStart="@dimen/base_margin_medium"
            android:layout_marginBottom="@dimen/base_margin_extra_small"
            android:layout_marginTop="@dimen/base_margin_extra_small"
            android:layout_marginEnd="@dimen/base_margin_small"
            android:src="@{item.requestImageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/contact_request_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_extra_small"
            android:layout_marginBottom="@dimen/base_margin_extra_small"
            android:layout_marginStart="@dimen/base_margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{item.requestName}"
            android:textColor="@color/color_base_text"
            android:textSize="@dimen/base_text_size_big"
            app:layout_constraintStart_toEndOf="@+id/contact_request_item_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/contact_request_item_type"/>

        <TextView
            android:id="@+id/contact_request_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_extra_small"
            android:layout_marginBottom="@dimen/base_margin_extra_small"
            android:layout_marginStart="@dimen/base_margin_small"
            android:textColor="@color/color_base_text_70per"
            android:textSize="@dimen/base_text_size_medium"
            android:textStyle="italic|bold"
            app:layout_constraintStart_toEndOf="@+id/contact_request_item_image"
            app:layout_constraintTop_toBottomOf="@+id/contact_request_item_name"
            app:layout_constraintBottom_toTopOf="@+id/contact_request_item_title"
            app:showUserType="@{item.requestType}" />

        <TextView
            android:id="@+id/contact_request_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_extra_small"
            android:layout_marginBottom="@dimen/base_margin_extra_small"
            android:layout_marginStart="@dimen/base_margin_small"
            android:textColor="@color/color_base_text"
            android:text="@string/title_wants_to_contact"
            android:textSize="@dimen/base_text_size_medium"
            app:layout_constraintStart_toEndOf="@+id/contact_request_item_image"
            app:layout_constraintTop_toBottomOf="@+id/contact_request_item_type"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>
</layout>