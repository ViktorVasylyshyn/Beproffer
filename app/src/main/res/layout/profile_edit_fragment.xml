<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="showProgress"
            type="android.databinding.ObservableBoolean" />

        <variable
            name="userInfo"
            type="com.beproffer.beproffer.data.models.UserInfo" />

        <variable
            name="fragmentCallback"
            type="com.beproffer.beproffer.presentation.profile.profile_edit.ProfileEditFragmentCallback" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/edit_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_grey"
        tools:context=".presentation.profile.profile_edit.ProfileEditFragment">

        <ImageView
            android:id="@+id/edit_fragment_image"
            android:layout_width="@dimen/profile_image"
            android:layout_height="@dimen/profile_image"
            android:layout_margin="@dimen/base_margin_medium"
            android:background="@drawable/button_background_green_stroke_rectangle"
            android:onClick="@{(view) -> fragmentCallback.onSetProfileImageClick()}"
            android:src="@{userInfo.userProfileImageUrl}"
            app:layout_constraintEnd_toStartOf="@+id/edit_fragment_gender_image_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/edit_fragment_gender_image_button"
            android:layout_width="@dimen/icons_size_normal_width"
            android:layout_height="@dimen/icons_size_normal_height"
            android:background="@drawable/button_background_green_stroke_rectangle"
            android:onClick="@{(view)->fragmentCallback.onChangeUserGenderClick()}"
            app:layout_constraintBottom_toBottomOf="@+id/edit_fragment_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edit_fragment_image"
            app:layout_constraintTop_toTopOf="@+id/edit_fragment_image"
            app:setGenderImage="@{userInfo.userGender}"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/specialist_storage_edit_gender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_padding_small"
            android:textColor="@color/color_base_text"
            android:textSize="@dimen/base_text_size_medium"
            app:layout_constraintEnd_toEndOf="@+id/edit_fragment_gender_image_button"
            app:layout_constraintStart_toStartOf="@+id/edit_fragment_gender_image_button"
            app:layout_constraintTop_toBottomOf="@+id/edit_fragment_gender_image_button"
            app:setGenderTitle="@{userInfo.userGender}" />

        <EditText
            android:id="@+id/edit_fragment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin_small"
            android:background="@drawable/rectangle_white_background"
            android:hint="@string/name_infield"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1"
            android:text="@={userInfo.userName}"
            android:textColor="@color/color_base_text"
            android:textColorHint="@color/color_base_text_70per"
            android:textSize="@dimen/base_text_size_big"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_fragment_image"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edit_fragment_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin_small"
            android:background="@drawable/rectangle_white_background"
            android:hint="@string/phone_infield"
            android:inputType="phone"
            android:maxLength="20"
            android:maxLines="1"
            android:text="@={userInfo.userPhone}"
            android:textColor="@color/color_base_text"
            android:textColorHint="@color/color_base_text_70per"
            android:textSize="@dimen/base_text_size_big"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_fragment_name"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edit_fragment_about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin_small"
            android:background="@drawable/rectangle_white_background"
            android:ellipsize="end"
            android:hint="@string/hint_about_me_infield"
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:maxLines="3"
            android:text="@={userInfo.userInfo}"
            android:textColor="@color/color_base_text"
            android:textColorHint="@color/color_base_text_70per"
            android:textSize="@dimen/base_text_size_big"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_fragment_phone"
            tools:ignore="Autofill" />

        <ImageView
            android:id="@+id/edit_fragment_accept_image_button"
            android:layout_width="@dimen/icons_size_normal_width"
            android:layout_height="@dimen/icons_size_normal_height"
            android:layout_margin="@dimen/base_margin_medium"
            android:background="@drawable/button_background_green_stroke_rectangle"
            android:onClick="@{(view)->fragmentCallback.onCheckUserDataClick()}"
            android:src="@drawable/ic_check_mark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_fragment_about_me"
            tools:ignore="ContentDescription" />

        <ProgressBar
            android:id="@+id/edit_fragment_progress_bar"
            android:layout_width="@dimen/profile_image_half"
            android:layout_height="@dimen/profile_image_half"
            android:theme="@style/Widget.AppCompat.ProgressBar"
            android:visibility="@{showProgress ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/edit_fragment_bottom_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_small"
            android:layout_marginEnd="@dimen/base_margin_small"
            android:layout_marginBottom="@dimen/bnb_floating_button_bottom_margin"
            android:background="@drawable/rectangle_grey_background"
            android:gravity="center"
            android:textColor="@color/color_base_text"
            android:textSize="@dimen/base_text_size_medium"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>


</layout>