<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout">

    <data>

        <variable
            name="fragmentCallback"
            type="com.beproffer.beproffer.presentation.search.SearchFragmentCallback" />

        <variable
            name="searchFragmentViewModel"
            type="com.beproffer.beproffer.presentation.search.SearchFragmentViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_grey_background"
        android:orientation="vertical"
        tools:context=".presentation.search.SearchFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin_small"
            android:text="@string/title_search_fragment"
            android:textColor="@color/color_base_text"
            android:textSize="@dimen/base_text_size_big"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/search_gender_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/search_gender_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_grey_background"
            android:padding="@dimen/base_padding_small"
            android:text="@string/hint_gender_outfield"
            android:textColor="@color/color_base_text"
            android:textSize="@dimen/base_text_size_medium"
            app:layout_constraintEnd_toEndOf="@+id/search_gender_image"
            app:layout_constraintStart_toStartOf="@+id/search_gender_image"
            app:layout_constraintTop_toBottomOf="@+id/search_gender_image" />

        <TextView
            android:id="@+id/search_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_grey_background"
            android:padding="@dimen/base_padding_small"
            android:text="@string/hint_type_outfield"
            android:textColor="@color/color_base_text"
            android:textSize="@dimen/base_text_size_medium"
            app:layout_constraintEnd_toEndOf="@+id/search_type_image"
            app:layout_constraintStart_toStartOf="@+id/search_type_image"
            app:layout_constraintTop_toBottomOf="@+id/search_type_image" />

        <ImageView
            android:id="@+id/search_gender_image"
            android:layout_width="@dimen/icons_size_normal_width"
            android:layout_height="@dimen/icons_size_normal_height"
            android:layout_marginTop="@dimen/profile_image_half"
            android:src="@drawable/ic_question_sign"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search_type_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/search_type_image"
            android:layout_width="@dimen/icons_size_normal_width"
            android:layout_height="@dimen/icons_size_normal_height"
            android:layout_marginTop="@dimen/profile_image_half"
            android:src="@drawable/ic_question_sign"
            app:layout_constraintEnd_toStartOf="@+id/search_gender_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ScrollView
            android:id="@+id/search_scroll_service_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bsl_scroll_view_width"
            app:layout_constraintEnd_toEndOf="@+id/search_type_title"
            app:layout_constraintStart_toStartOf="@+id/search_type_title"
            app:layout_constraintTop_toBottomOf="@+id/search_type_arrow_up">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/search_haircut_icon"
                    android:layout_width="@dimen/icons_size_normal_width"
                    android:layout_height="@dimen/icons_size_normal_height"
                    android:layout_margin="@dimen/base_margin_small"
                    android:background="@drawable/rectangle_grey_background"
                    android:onClick="@{searchFragmentViewModel::handleServiceTypeClick}"
                    android:src="@drawable/ic_haircut"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/search_haircut_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_padding_small"
                    android:text="@string/hint_hair_outfield"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/search_haircut_icon"
                    app:layout_constraintStart_toStartOf="@+id/search_haircut_icon"
                    app:layout_constraintTop_toBottomOf="@+id/search_haircut_icon" />

                <ImageView
                    android:id="@+id/search_nails_icon"
                    android:layout_width="@dimen/icons_size_normal_width"
                    android:layout_height="@dimen/icons_size_normal_height"
                    android:layout_marginStart="@dimen/base_margin_small"
                    android:background="@drawable/rectangle_grey_background"
                    android:onClick="@{searchFragmentViewModel::handleServiceTypeClick}"
                    android:src="@drawable/ic_nails"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_haircut_title"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/search_nails_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_padding_small"
                    android:text="@string/hint_nails_outfield"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/search_nails_icon"
                    app:layout_constraintStart_toStartOf="@+id/search_nails_icon"
                    app:layout_constraintTop_toBottomOf="@+id/search_nails_icon" />

                <ImageView
                    android:id="@+id/search_makeup_icon"
                    android:layout_width="@dimen/icons_size_normal_width"
                    android:layout_height="@dimen/icons_size_normal_height"
                    android:layout_marginStart="@dimen/base_margin_small"
                    android:background="@drawable/rectangle_grey_background"
                    android:onClick="@{searchFragmentViewModel::handleServiceTypeClick}"
                    android:src="@drawable/ic_makeup"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_nails_title"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/search_makeup_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_padding_small"
                    android:text="@string/hint_makeup_outfield"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/search_makeup_icon"
                    app:layout_constraintStart_toStartOf="@+id/search_makeup_icon"
                    app:layout_constraintTop_toBottomOf="@+id/search_makeup_icon" />

                <ImageView
                    android:id="@+id/search_tattoo_piercing_icon"
                    android:layout_width="@dimen/icons_size_normal_width"
                    android:layout_height="@dimen/icons_size_normal_height"
                    android:layout_marginStart="@dimen/base_margin_small"
                    android:background="@drawable/rectangle_grey_background"
                    android:onClick="@{searchFragmentViewModel::handleServiceTypeClick}"
                    android:src="@drawable/ic_tattoo_piercing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_makeup_title"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/search_tattoo_piercing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_padding_small"
                    android:text="@string/hint_tattoo_outfield"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/search_tattoo_piercing_icon"
                    app:layout_constraintStart_toStartOf="@+id/search_tattoo_piercing_icon"
                    app:layout_constraintTop_toBottomOf="@+id/search_tattoo_piercing_icon" />

                <ImageView
                    android:id="@+id/search_barber_icon"
                    android:layout_width="@dimen/icons_size_normal_width"
                    android:layout_height="@dimen/icons_size_normal_height"
                    android:background="@drawable/rectangle_grey_background"
                    android:layout_marginStart="@dimen/base_margin_small"
                    android:onClick="@{searchFragmentViewModel::handleServiceTypeClick}"
                    android:src="@drawable/ic_barbershop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_tattoo_piercing_title"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/search_barber_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_padding_small"
                    android:text="@string/hint_barber_outfield"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/search_barber_icon"
                    app:layout_constraintStart_toStartOf="@+id/search_barber_icon"
                    app:layout_constraintTop_toBottomOf="@+id/search_barber_icon" />

                <ImageView
                    android:id="@+id/search_fitness_icon"
                    android:layout_width="@dimen/icons_size_normal_width"
                    android:layout_height="@dimen/icons_size_normal_height"
                    android:background="@drawable/rectangle_grey_background"
                    android:layout_marginStart="@dimen/base_margin_small"
                    android:onClick="@{searchFragmentViewModel::handleServiceTypeClick}"
                    android:src="@drawable/ic_fitness"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_barber_title"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_padding_small"
                    android:text="@string/hint_fitness_outfield"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/search_fitness_icon"
                    app:layout_constraintStart_toStartOf="@+id/search_fitness_icon"
                    app:layout_constraintTop_toBottomOf="@+id/search_fitness_icon" />


            </android.support.constraint.ConstraintLayout>

        </ScrollView>

        <ScrollView
            android:id="@+id/search_gender_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bsl_scroll_view_width"
            app:layout_constraintEnd_toEndOf="@+id/search_gender_title"
            app:layout_constraintStart_toStartOf="@+id/search_gender_title"
            app:layout_constraintTop_toBottomOf="@+id/search_gender_arrow_up">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/search_gender_male_icon"
                    android:layout_width="@dimen/icons_size_normal_width"
                    android:layout_height="@dimen/icons_size_normal_height"
                    android:layout_margin="@dimen/base_margin_small"
                    android:background="@drawable/rectangle_grey_background"
                    android:onClick="@{searchFragmentViewModel::handleGenderClick}"
                    android:src="@drawable/ic_gender_sign_male"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/search_gender_male_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_padding_small"
                    android:text="@string/title_gender_male"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/search_gender_male_icon"
                    app:layout_constraintStart_toStartOf="@+id/search_gender_male_icon"
                    app:layout_constraintTop_toBottomOf="@+id/search_gender_male_icon" />

                <ImageView
                    android:id="@+id/search_gender_female_icon"
                    android:layout_width="@dimen/icons_size_normal_width"
                    android:layout_height="@dimen/icons_size_normal_height"
                    android:background="@drawable/rectangle_grey_background"
                    android:layout_marginStart="@dimen/base_margin_small"
                    android:onClick="@{searchFragmentViewModel::handleGenderClick}"
                    android:src="@drawable/ic_gender_sign_female"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_gender_male_title"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/search_gender_female_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_padding_small"
                    android:text="@string/title_gender_female"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/search_gender_female_icon"
                    app:layout_constraintStart_toStartOf="@+id/search_gender_female_icon"
                    app:layout_constraintTop_toBottomOf="@+id/search_gender_female_icon" />

                <ImageView
                    android:id="@+id/search_gender_any_icon"
                    android:layout_width="@dimen/icons_size_normal_width"
                    android:layout_height="@dimen/icons_size_normal_height"
                    android:background="@drawable/rectangle_grey_background"
                    android:layout_marginStart="@dimen/base_margin_small"
                    android:onClick="@{searchFragmentViewModel::handleGenderClick}"
                    android:src="@drawable/ic_gender_sign_any"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_gender_female_title"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_padding_small"
                    android:text="@string/title_gender_all_genders"
                    android:textColor="@color/color_base_text"
                    android:textSize="@dimen/base_text_size_small"
                    app:layout_constraintEnd_toEndOf="@+id/search_gender_any_icon"
                    app:layout_constraintStart_toStartOf="@+id/search_gender_any_icon"
                    app:layout_constraintTop_toBottomOf="@+id/search_gender_any_icon" />


            </android.support.constraint.ConstraintLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/search_type_arrow_up"
            android:layout_width="@dimen/icons_size_normal_width"
            android:layout_height="@dimen/icons_size_small_height"
            android:src="@drawable/ic_arrow_up"
            app:layout_constraintTop_toBottomOf="@id/search_type_title"
            app:layout_constraintStart_toStartOf="@id/search_scroll_service_view"
            app:layout_constraintEnd_toEndOf="@+id/search_scroll_service_view"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/search_gender_arrow_up"
            android:layout_width="@dimen/icons_size_normal_width"
            android:layout_height="@dimen/icons_size_small_height"
            android:src="@drawable/ic_arrow_up"
            app:layout_constraintTop_toBottomOf="@+id/search_gender_title"
            app:layout_constraintStart_toStartOf="@+id/search_gender_scroll_view"
            app:layout_constraintEnd_toEndOf="@+id/search_gender_scroll_view"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="@dimen/icons_size_normal_width"
            android:layout_height="@dimen/icons_size_small_height"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintTop_toBottomOf="@id/search_scroll_service_view"
            app:layout_constraintStart_toStartOf="@id/search_scroll_service_view"
            app:layout_constraintEnd_toEndOf="@id/search_scroll_service_view"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="@dimen/icons_size_normal_width"
            android:layout_height="@dimen/icons_size_small_height"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintTop_toBottomOf="@+id/search_gender_scroll_view"
            app:layout_constraintStart_toStartOf="@+id/search_gender_scroll_view"
            app:layout_constraintEnd_toEndOf="@+id/search_gender_scroll_view"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/search_apply_request"
            android:layout_width="@dimen/icons_size_normal_width"
            android:layout_height="@dimen/icons_size_normal_height"
            android:layout_margin="@dimen/base_margin_medium"
            android:background="@drawable/button_background_green_stroke_rectangle"
            android:padding="@dimen/base_margin_extra_small"
            android:onClick="@{(view) -> fragmentCallback.onApplySearchRequestClick()}"
            android:src="@drawable/ic_check_mark"
            android:text="@string/search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_scroll_service_view"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/base_margin_small"
            android:layout_marginEnd="@dimen/base_margin_small"
            android:layout_marginBottom="@dimen/bnb_floating_button_bottom_margin"
            android:text="@string/app_availability"
            android:textSize="@dimen/base_text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>

