<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="showProgress"
            type="android.databinding.ObservableBoolean"/>

        <variable
            name="fragmentCallback"
            type="com.beproffer.beproffer.presentation.specstorage.SpecialistStorageFragmentCallback" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/base_margin_small"
        android:background="@color/color_background_grey"
        tools:context=".presentation.specstorage.SpecialistStorageFragment">

        <TextView
            android:id="@+id/specialist_storage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_specialist_storage_fragment"
            android:layout_margin="@dimen/base_margin_small"
            android:textColor="@color/color_base_text"
            android:textSize="@dimen/base_text_size_big"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/specialist_storage_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_margin="@dimen/base_margin_small"
            app:layout_constraintTop_toBottomOf="@+id/specialist_storage_title"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/specialist_storage_add_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabCustomSize="@dimen/bnb_icon_size"
            android:layout_marginEnd="@dimen/base_margin_big"
            android:layout_marginBottom="@dimen/bnb_floating_button_bottom_margin"
            android:onClick="@{(view)-> fragmentCallback.onAddNewImageClick()}"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <ProgressBar
            android:id="@+id/specialist_storage_progress_bar"
            android:layout_width="@dimen/profile_image_half"
            android:layout_height="@dimen/profile_image_half"
            android:theme="@style/Widget.AppCompat.ProgressBar"
            android:visibility="@{showProgress ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>